@using Microsoft.VisualBasic.CompilerServices
@using System.Reflection.Metadata
@using BookStoreApp.Utils
@model List<BookStoreApp.Models.Category>;
@{
}

<h1>Categories</h1>
<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Description</th>
			<th>Is Approved</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var category in Model)
		{
			<tr>
				<td>@category.CategoryId</td>
				<td>@category.Name</td>
				<td>@category.Description</td>
				<td>@category.IsApproved</td>
				 <td>
                                    @if (!category.IsApproved && User.IsInRole(SD.AdminRole))
                                    {
                                        <form method="post" action="@Url.Action("Approve", new { id = category.CategoryId })">
                                            <button type="submit">Approve</button>
                                        </form>
                                        <form method="post" action="@Url.Action("Reject", new { id = category.CategoryId })">
                                            <button type="submit">Reject</button>
                                        </form>
                                    }
                                </td>
				<td><a href="ViewCategory/@category.CategoryId">View</a></td>
			</tr>
		}
	</tbody>
</table>
<a href="CreateCategory" class="btn btn-outline-primary">Create</a>