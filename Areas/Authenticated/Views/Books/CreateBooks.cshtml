@model BookStoreApp.ModelsCRUD.Book.AddBookViewModel;

@{
}
<h1>Create Book Company Example</h1>
<form method="post" action="CreateBooks" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="BookName" class="form-label">Book Name:</label>
        <input type="text" class="form-control" id="BookName" asp-for="Name">
    </div>
    <div class="mb-3">
        <label for="Quantity" class="form-label">Quantity:</label>
        <input type="text" class="form-control" id="Quantity" asp-for="Quantity">
    </div>
    <div class="mb-3">
        <label for="Price" class="form-label">Price:</label>
        <input type="text" class="form-control" id="Price" asp-for="Price">
    </div>
    <div class="mb-3">
        <label for="Description" class="form-label">Description:</label>
        <input type="text" class="form-control" id="Description" asp-for="Description">
    </div>
    <div class="mb-3">
        <label for="UpdateDate" class="form-label">Update Date:</label>
        <input type="date" class="form-control" id="UpdateDate" asp-for="UpdateDate">
    </div>
    <div class="mb-3">
        <label for="Author" class="form-label">Author:</label>
        <input type="text" class="form-control" id="Author" asp-for="Author">
    </div>
    <div class="mb-3">
        <label for="BookImg" class="form-label">Image:</label>
                <input type="file" asp-for="FronImage" class="form-control" id="FlFrontImage" onchange="document.getElementById('FrontImagePrv').src = window.URL.createObjectURL(this.files[0])">
    <img id="FrontImagePrv" src="" alt="Logo Image" width="150" height="150" style="border:1px; margin-top:20px; margin-left:120px"/>
    </div>
    <div class="mb-3">
        <label for="CategoryId" class="form-label">Category ID:</label>
        @Html.DropDownListFor(model => model.CategoryId, (SelectList)ViewBag.CategoryId, new { @class = "form-control" })
    </div>
    <div class="mb-3">
            <label for="PublishCompanyId" class="form-label">PublishCompanyId:</label>
            @Html.DropDownListFor(model => model.PublishCompanyId, (SelectList)ViewBag.PublishCompanyId, new { @class = "form-control" })
        </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>